  <main role="main">
    <div class="container mt-5 pt-5">
        <h2>คำขอลาพักร้อน</h2>
        <form action="/submit-leave-request" method="POST">
            <div class="form-row">
                
                <div class="col-md-4 mb-3">
                    <label for="firstname">ชื่อ</label>
                    <input type="text" class="form-control" id="start_date" name="ชื่อ" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="lasttname">นามสกุล</label>
                    <input type="text" class="form-control" id="start_date" name="นามสกุล" required>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="start_date">วันที่เริ่มต้น</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" required>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="end_date">วันที่สิ้นสุด</label>
                    <input type="date" class="form-control" id="end_date" name="end_date" required>
                </div>
            </div> 

          
            <div class="form-group">
                <label for="reason">เหตุผลในการลา</label>
                <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
            </div>
            <button class="btn btn-primary" type="submit">ยื่นคำขอ</button>


         
        </form>
    </div>
